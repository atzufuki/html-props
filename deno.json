{
  "workspace": [
    "./src/builder",
    "./src/built-ins",
    "./src/core",
    "./src/create",
    "./src/create/template",
    "./src/jsx",
    "./src/layout",
    "./src/signals",
    "./src/landing"
  ],
  "tasks": {
    "dev": "deno run --watch --allow-read --allow-write=src/landing --allow-run=deno --allow-net --allow-env --unstable-bundle src/landing/dev_server.ts",
    "install:builder": "npm install --prefix ./src/builder",
    "compile:builder": "npm run compile --prefix ./src/builder",
    "bundle": "deno bundle --unstable-sloppy-imports src/landing/main.ts --output src/landing/dist/main.bundle.js",
    "build": "deno task bundle",
    "start": "deno run --allow-net --allow-read src/landing/server.ts",
    "test": " deno test --allow-env"
  },
  "imports": {
    "@luca/esbuild-deno-loader": "jsr:@luca/esbuild-deno-loader@^0.11.1",
    "@std/assert": "jsr:@std/assert@^1.0.11",
    "esbuild": "npm:esbuild@^0.25.0",
    "linkedom": "npm:linkedom@^0.18.6"
  },
  "fmt": {
    "useTabs": false,
    "semiColons": true,
    "singleQuote": true,
    "indentWidth": 2,
    "lineWidth": 120
  },
  "lint": {
    "rules": {
      "tags": ["jsr"]
    }
  },
  "compilerOptions": {
    "lib": ["dom", "deno.ns"],
    "noImplicitOverride": false
  }
}
